# main.py
import tkinter as tk
from gui.main_gui import MainGUI
from controllers.scope_controller import ScopeController
from controllers.wavegen_controller import WavegenController
from controllers.osa_controller import OSAController
from models.measurement_data import MeasurementData

def main():
    root = tk.Tk()

    scope = ScopeController(address="TCPIP::scope_address::INSTR")
    wavegen = WavegenController(address="TCPIP::wavegen_address::INSTR")
    osa = OSAController(address="TCPIP::osa_address::INSTR")

    data_model = MeasurementData()

    app = MainGUI(root, scope, wavegen, osa, data_model)
    root.mainloop()

if __name__ == "__main__":
    main()
